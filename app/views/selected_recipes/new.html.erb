<!-- Validation failure messages -->

<% if @selected_recipe.errors.any? %>
  <% @selected_recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Selected Recipe</h3>
      </div>
      <div class="panel-body">
        <%= form_tag selected_recipes_url, :method => "post", :class => "form-horizontal" do %>
          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @selected_recipe.user_id %>">
            </div>
          </div>

          <!-- Label and input for recipe_id -->
          <div class="form-group">
            <label for="recipe_id" class="col-sm-2 control-label">
              Recipe
            </label>
            <div class="col-sm-10">
              <input type="text" id="recipe_id" name="recipe_id" placeholder="Recipe" class="form-control" value="<%= @selected_recipe.recipe_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Selected Recipe" class="btn btn-success">
              or
              <a href="/selected_recipes">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

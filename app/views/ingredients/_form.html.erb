  <%= form_for(@ingredient, html: { class: 'form-horizontal'}) do |f| %>
    <!-- Label and input for name -->
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: 'name', class: 'form-control' %>
      </div>
    </div>

    <!-- Label and input for category -->
    <div class="form-group">
      <%= f.label :category, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :category, placeholder: 'category', class: 'form-control' %>
      </div>
    </div>

    <!-- Label and input for price_per_unit -->
    <div class="form-group">
      <%= f.label :price_per_unit, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :price_per_unit, placeholder: 'price per unit', class: 'form-control' %>
      </div>
    </div>

    <!-- Label and input for unit -->
    <div class="form-group">
      <%= f.label :unit, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :unit, placeholder: 'unit', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-default' %>
        <!-- <input type="submit" value="Create Ingredient" class="btn btn-success"> -->
        or
        <a href="/ingredients">Cancel</a>
      </div>
    </div>
  <% end %>
